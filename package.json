  },
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "benchmark": "NODE_OPTIONS='--experimental-vm-modules' jest tests/performance --runInBand",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "rollup -c"
  },
  "homepage": "https://github.com/maayanpolitzer/rule-engine",
  "repository": {
    "type": "git",
    "url": "https://github.com/maayanpolitzer/rule-engine.git"
