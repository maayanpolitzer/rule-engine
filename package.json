  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "keywords": [
    "rules",
    "engine",
    "rule-engine",
    "logic",
    "validation",
    "dynamic-rules",
    "decision-engine",
    "workflow",
    "conditions",
    "operators",
